<div class="tr-estimate">
  <div class="tr-estimate-title">
    Estimate based on all data entries
  </div>
  <div class="tr-estimate-fork">
    <ul class="estimate-fork-list">
      <li class="estimate-element">
        <p>Low estimate</p>
        <h4><%= format_number((@fair_price * 0.8 / 1000).round(0) * 1000, currency_symbol: false) %> €</h4>
      </li>
      <li class="estimate-sep"></li>
      <li class="estimate-element">
        <p>Best estimate</p>
        <h4><%= format_number((@fair_price / 1000).round(0) * 1000, currency_symbol: false) %> €</h4>
      </li>
      <li class="estimate-sep"></li>
      <li class="estimate-element">
        <p>High estimate</p>
        <h4><%= format_number((@fair_price * 1.2 / 1000).round(0) * 1000, currency_symbol: false) %> €</h4>
      </li>
    </ul>
  </div>
</div>
