<%= simple_form_for :search, url: search_business_assets_path, method: :get, remote: true do |f| %>

<div class="index-banner">
  <!-- <div class="search_bar"> -->
    <div class="filters">
      <div class="btn-search">
        <%= f.input :address, label: false, placeholder: "Enter address", input_html: {class: "btn-filter"} %>
      </div>
      <button class="btn-filter" id="btn-asset-category">Category</button>
<!--       <div class="filter-options"> -->
      <div class="options"id="filter-asset-category">
          <input type="hidden" name="post[category_ids][]" value="">
          <div class="option-choices">
            <% AssetCategory.all.sort_by {|x| x.name}.each do |category| %>
              <input type="checkbox" class="option-choice hidden" value="<%= category.id %>" name="post[category_ids][]" id="post_category_ids_<%= category.id %>">
              <label for="post_category_ids_<%= category.id %>" class="option-choice">
                <div class="category-name">
                  <%= category.name %>
                </div>
              </label>
          <% end %>
          </div>
          <div class="btn-options">
            <a href="#" class="apply-options" id="apply-options-category">Apply</a>
          </div>

      </div>

      <button class="btn-filter" id="btn-asset-price">Price</button>
      <div class="options"id="filter-asset-price">
        <div data-role="main" class="ui-content">
          <form method="post" action="/action_page_post.php">
            <div data-role="rangeslider">
              <label for="price-min">Price:</label>
              <input type="range" name="price-min" id="price-min" value="200" min="0" max="1000">
              <label for="price-max">Price:</label>
              <input type="range" name="price-max" id="price-max" value="800" min="0" max="1000">
            </div>
              <input type="submit" data-inline="true" value="Submit">
              <p>The range slider can be useful for allowing users to select a specific price range when browsing products.</p>
            </form>
        </div>
        <div class="btn-options">
          <a href="#" class="apply-options" id="apply-options-price">Apply</a>
        </div>
      </div>

      <%= f.submit 'Apply', class: "btn-filter" %>
<!--       </div> -->
    </div>
  <!-- </div> -->
</div>

<% end %>



<div class="main-container" id="main-display">
  <%= render 'cards_list_map', business_assets: @business_assets, markers: @markers  %>
</div>
