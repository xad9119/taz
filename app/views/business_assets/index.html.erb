

<div class="index-container">
  <div class="left-container">
    <%= simple_form_for :search, url: search_business_assets_path, html: {method: :get, class: "search_form"}, remote: true do |f| %>
    <%= render 'shared/navbar-short' %>
    <div class="index-banner">
      <div class="filters">
        <div class="btn-search">
          <%= f.input :address, label: false, placeholder: "Search assets", input_html: {class: "btn-filter"} %>
        </div>
        <button class="btn-filter" id="btn-asset-category">Category</button>
        <div id="modal-category" class="modal">
          <div class="options"id="filter-asset-category">
              <input type="hidden" name="post[category_ids][]" value="">
              <div class="option-choices">
                <% AssetCategory.all.sort_by {|x| x.name}.each do |category| %>
                  <input type="checkbox" class="option-choice hidden" value="<%= category.id %>" name="post[category_ids][]" id="post_category_ids_<%= category.id %>">
                  <label for="post_category_ids_<%= category.id %>" class="option-choice">
                    <div class="category-name">
                      <%= category.name %>
                    </div>
                  </label>
              <% end %>
              </div>
              <div class="btn-options">
                <a href="#" class="reset-options" id="reset-options-category">Reset</a>
                <a href="#" class="apply-options" id="apply-options-category">Apply</a>
              </div>
          </div>
        </div>

        <button class="btn-filter" id="btn-asset-price">Price</button>
        <div id="modal-price" class="modal">
          <div class="options"id="filter-asset-price">
              <div class="slider-modal">
                <div class="slider-values">
                  <span class="slider-min-value"></span>
                  <span class="slider-max-value"></span>
                </div>

                <div id="slider-handles-price" class="slider-handles"></div>
                  <input type="text" class="option-price hidden" value="" name="post[price_range][]" id="slider-range-value">
              </div>
              <div class="btn-options">
                <a href="#" class="reset-options" id="reset-options-price">Reset</a>
                <a href="#" class="apply-options" id="apply-options-price">Apply</a>
              </div>
          </div>
        </div>

        <button class="btn-filter" id="btn-asset-surface">Surface</button>
        <div id="modal-surface" class="modal">
          <div class="options"id="filter-asset-surface">
              <div class="slider-modal">
                <div class="slider-values">
                  <span class="slider-min-value"></span>
                  <span class="slider-max-value"></span>
                </div>

                <div id="slider-handles-surface" class="slider-handles"></div>
                <input type="text" class="option-surface hidden" value="" name="post[surface_range][]" id="slider-surface-value">
              </div>
              <div class="btn-options">
                <a href="#" class="reset-options" id="reset-options-surface">Reset</a>
                <a href="#" class="apply-options" id="apply-options-surface">Apply</a>
              </div>
          </div>
        </div>

      </div>
    </div>

    <%= f.submit 'Apply', class: "btn-filter apply-search-form hidden" %>
    <% end %>

    <div class="main-container" id="main-display">
      <%= render 'cards', business_assets: @business_assets  %>
    </div>
  </div>

  <div class="right-container" id="card-display">
    <%= render 'map', markers: @markers  %>
  </div>
</div>
