<%= link_to business_asset_path(business_asset) do %>
<div class="card">
  <div class="card-main" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1524214786335-66456317bde6?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=81c0d1a541bf9c4857daa8b6c79bffda&auto=format&fit=crop&w=750&q=80');">
    <div class="asset-category"><%= business_asset.asset_type %></div>
  </div>
  <div class="card-information">
    <div class="first-line">
      <div class="address">
        <% if business_asset.geographical_location.address %>
          <% address = business_asset.geographical_location.address.length > 30 ? "#{business_asset.geographical_location.address[0..30]}..." : business_asset.geographical_location.address %>
          <p><%= address %></p>
          <% else %>
          <p>No Address</p>
        <% end %>
      </div>
<!--       <div class="occupancy">
        <% if business_asset.occupancy_rate %>
          <% if  %>
            <% business_asset.occupancy_rate > 0.8 || business_asset.occupancy_rate == nil %>
            <i class="fas fa-circle" style="color: green"></i>
            <% else %>
              <i class="fas fa-circle" style="color: red"></i>
          <% end %>
          <% else %>
          <p>no data</p>
        <% end %>
      </div> -->
    </div>
    <div class="rental-info">
      <div class="surface">
        <% if business_asset.surface %>
          <p>Surface: <%= business_asset.surface.round %> m2</p>
          <% else %>
          <p>no surface</p>
        <% end %>

      </div>
      <div class="rent">
        <% if business_asset.transactions.first.price %>
          <p><%= business_asset.transactions.first.price.round %>/ €</p>
          <% else %>
          <p>no data</p>
        <% end %>
      </div>
    </div>
    <div class="profitability"><p>Rentabilité: 7,05%</p></div>
  </div>
</div>
<% end %>
