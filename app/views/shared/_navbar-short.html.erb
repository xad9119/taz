<div class="navbar-taz navbar-taz-white">
  <!-- Logo -->
  <%= link_to business_assets_path, class: "navbar-taz-brand" do %>
    <%= image_tag "logo.svg", height: 50 %>
  <% end %>

  <!-- Left Navigation in asset show -->
  <%= yield :navbar_links %>

  <!-- Right Navigation -->
  <div class="navbar-short-right hidden-xs hidden-sm">


    <!-- Links -->
    <% if user_signed_in? %>
      <div class="navbar-short-item">
        <div class="dropdown">

          <button class="hamburger hamburger--spin dropdown-toggle" type="button" data-toggle="dropdown">
            <span class="hamburger-box">
              <span class="hamburger-inner"></span>
            </span>
          </button>






          <ul class="dropdown-menu dropdown-menu-right navbar-short-dropdown-menu">
            <li>
              <%= link_to business_assets_path do %>
                <i class="fa fa-user"></i> Profile
              <% end %>
            </li>
            <li>
              <%= link_to "Add Asset", new_business_asset_path, class: "navbar-short-item navbar-short-link navbar-title" %>
            </li>
            <li>
              <%= link_to "Dashboard", dashboard_path, class: "navbar-short-item navbar-short-link navbar-title" %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-short-item navbar-short-link navbar-title" %>
    <% end %>
  </div>
</div>

