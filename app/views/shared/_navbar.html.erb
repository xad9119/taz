<div class="navbar-wagon navbar-fixed-top navbar-wagon-white">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.jpg", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Links -->
    <%= link_to "Home", ideas_path, class: "navbar-wagon-item navbar-wagon-link navbar-title" %>
    <%= link_to "Search", search_show_path, class: "navbar-wagon-item navbar-wagon-link navbar-title" %>
    <%= link_to "Add Asset", new_asset_path, class: "navbar-wagon-item navbar-wagon-link navbar-title" %>
    <%= link_to "Dashboard", assets_path, class: "navbar-wagon-item navbar-wagon-link navbar-title" %>
    <% if user_signed_in? %>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "admin_avatar.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown", title: current_user.email %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to users_show_path do %>
                <i class="fa fa-user"></i> Profile
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link navbar-title" %>
    <% end %>
  </div>
</div>

